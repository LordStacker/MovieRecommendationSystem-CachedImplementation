              </rowConstraints>
               <children>
                  <Button fx:id="switchDisplayModeButtonFx" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#switchDisplayMode" prefHeight="26.0" prefWidth="26.0" styleClass="switchDisplayModeButton" GridPane.halignment="RIGHT" GridPane.valignment="TOP" />
