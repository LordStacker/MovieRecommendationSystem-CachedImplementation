                  <HBox GridPane.rowIndex="2">
                     <children>
                        <ImageView fx:id="passwordIcon" fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../icons/lockIconLog.png" />
                           <HBox.margin>
                              <Insets left="8.0" />
                           </HBox.margin>
                         </ImageView>
                        <MFXPasswordField fx:id="passwordTextField" animated="false" floatMode="ABOVE" prefWidth="280.0" promptText="Password" text="f" GridPane.rowIndex="2" />
